@model Web.Models.Product

@{
    Layout = "~/Views/Shared/_Layoutindex.cshtml";
    ViewBag.Title = "Edit";
}



    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

